{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": false,
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "squash",
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "prConcurrentLimit": 20,
  "prHourlyLimit": 20,
  "rangeStrategy": "bump"
}
